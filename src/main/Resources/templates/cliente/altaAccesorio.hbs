<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Alta Accesorio</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">

</head>

<body id="page-top">

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Alta de Accesorio
                </div>

                <div class="card-body">
                    <form class="form-label-group" action="/altaAccesorio" method="POST">
                        <div class="form-group col-md-8 ">
                        Seleccione el Accesorio Deseado
                            <select class="form-control form-control-lg" title="accesorio" name="accesorio" id="accesorio">
                                <option value="Reloj">Reloj</option>
                                <option value="Pulsera">Pulsera</option>
                                <option value="Aro">Aro</option>
                                <option value="Lentes de Sol">Lentes de Sol</option>
                                <option value="Paraguas">Paraguas</option>
                            </select>
                        </div>
                        <div class="form-group col-md-8 ">
                            Seleccione Material Deseado
                            <select class="form-control form-control-lg" title="material" name="material" id="material">
                                <option value="Metal">Metal</option>
                                <option value="Oro">Oro</option>
                                <option value="Plata">Plata</option>
                                <option value="Bronce">Bronce</option>
                            </select>
                        </div>
                        <div class="form-group col-md-8 ">
                            Color Primario
                            <select class="form-control form-control-lg" title="Color Primario" name="colorPrimario" id="colorPrimario">
                                <option value="Azul">Azul</option>
                                <option value="Rojo">Rojo</option>
                                <option value="Amarillo">Amarillo</option>
                                <option value="Blanco">Blanco</option>
                                <option value="Verde">Verde</option>
                                <option value="Marron">Marrón</option>
                                <option value="Rosa">Rosa</option>
                                <option value="Violeta">Violeta</option>
                                <option value="Bordo">Bordo</option>
                                <option value="Celeste">Celeste</option>
                                <option value="Negro">Negro</option>
                                <option value="Gris">Gris</option>
                            </select>
                        </div>
                        <div class="form-group col-md-8 ">
                            Color Secundario
                            <select class="form-control form-control-lg" title="Color Secundario" name="colorSecundario" id="colorSecundario">
                                <option value="Ninguno">Ninguno</option>
                                <option value="Azul">Azul</option>
                                <option value="Rojo">Rojo</option>
                                <option value="Amarillo">Amarillo</option>
                                <option value="Blanco">Blanco</option>
                                <option value="Verde">Verde</option>
                                <option value="Marron">Marrón</option>
                                <option value="Rosa">Rosa</option>
                                <option value="Violeta">Violeta</option>
                                <option value="Bordo">Bordo</option>
                                <option value="Celeste">Celeste</option>
                                <option value="Negro">Negro</option>
                                <option value="Gris">Gris</option>
                            </select>
                        </div>
                        <div class="form-group col-md-8 ">
                            Guardarropas
                            <select class="form-control" title="guardarropa" name="guardarropa" id="sm">
                                {{#each guardarropa}}
                                    <option  value="{{identificador}}">{{identificador}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group" align="center">
                            <div class="card-header">Cargar Imagen</div>
                            <div class="card-body">
                                <div class="card-header">Cargar Imagen Accesorio</div>
                                <div class="form-group">
                                    <input class="file" id="inputImagenPrenda" name="inputImagenPrenda" aria-describedby="fileHelp" placeholder="Archivo a cargar" type="file" accept=".jpg,.png" />
                                </div>
                                <br>
                                <br>
                            </div>
                        </div>
                            <p>
                                <button class="btn btn-lg btn-primary" type="submit">Crear Accesorio</button>
                            </p>
                    </form>
                </div>
            </div>


        </div>

    </div>

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

</body>

</html>

